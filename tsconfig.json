{
    "compilerOptions": {
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            //alias pathing for absolute paths
            "@src/*": ["src/*"],
            "*": ["node_modules/*"]
        }
    },
    "include": ["**/*"]
}
